# Test environment variables
NODE_ENV=test
PORT=4001
MONGO_URI=mongodb://localhost:27017/explorekg_test

# Security Configuration (for testing)
SESSION_SECRET=test-session-secret-key-for-testing-minimum-32-characters-long
ENCRYPTION_KEY=test-encryption-key-for-testing-minimum-32-characters
JWT_SECRET=test-jwt-secret-for-testing-minimum-32-characters-long

# Security Features (disabled for testing speed)
ENABLE_ENCRYPTION_AT_REST=false
ENABLE_ADVANCED_LOGGING=false
ENABLE_SECURITY_HEADERS=true

CORS_ORIGIN=*
SUPPORTED_LANGUAGES=en,fr
DEFAULT_LANG=en
LOG_LEVEL=error

# Data Layer Configuration
SEED_DATA_ON_START=false
DEFAULT_PAGINATION_LIMIT=20
MAX_PAGINATION_LIMIT=100

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,pdf

# Validation Rules
MIN_PASSWORD_LENGTH=8
MAX_DESCRIPTION_LENGTH=2000
MAX_NAME_LENGTH=100

# Geographic Configuration
DEFAULT_COUNTRY=Kyrgyzstan
DEFAULT_TIMEZONE=Asia/Bishkek
DEFAULT_CURRENCY=KGS

# Search Configuration
SEARCH_RESULTS_LIMIT=50
AUTOCOMPLETE_LIMIT=10
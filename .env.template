# ExploreKG Server - Environment Configuration Template
# Copy this file to .env and fill in your values

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=4000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGO_URI=mongodb://localhost:27017/explorekg

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate a strong secret for session signing (min 32 characters)
# You can use: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-here-min-32-chars

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Development: use * or leave empty
# Production: specify exact domains
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_WHITELIST=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# LOCALIZATION
# ===========================================
SUPPORTED_LANGUAGES=en,fr
DEFAULT_LANG=en

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info

# ===========================================
# DATA LAYER CONFIGURATION
# ===========================================
SEED_DATA_ON_START=false
DEFAULT_PAGINATION_LIMIT=20
MAX_PAGINATION_LIMIT=100

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,pdf

# ===========================================
# BUSINESS RULES
# ===========================================
MIN_PASSWORD_LENGTH=8
MAX_DESCRIPTION_LENGTH=2000
MAX_NAME_LENGTH=100

# ===========================================
# GEOGRAPHIC CONFIGURATION
# ===========================================
DEFAULT_COUNTRY=Kyrgyzstan
DEFAULT_TIMEZONE=Asia/Bishkek
DEFAULT_CURRENCY=KGS

# ===========================================
# SEARCH CONFIGURATION
# ===========================================
SEARCH_RESULTS_LIMIT=50
AUTOCOMPLETE_LIMIT=10
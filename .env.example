# Example .env file â€” DO NOT COMMIT THE REAL ONE

# Basic Configuration
NODE_ENV=development
PORT=4000
MONGO_URI=your_mongodb_connection_uri_here

# Security & CORS
CORS_ORIGIN=*

# Internationalization
SUPPORTED_LANGUAGES=en,fr
DEFAULT_LANG=en

# Logging
LOG_LEVEL=info

# Data Layer Configuration
SEED_DATA_ON_START=false
DEFAULT_PAGINATION_LIMIT=20
MAX_PAGINATION_LIMIT=100

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,pdf

# Validation Rules
MIN_PASSWORD_LENGTH=8
MAX_DESCRIPTION_LENGTH=2000
MAX_NAME_LENGTH=100

# Geographic Configuration (Kyrgyzstan Tourism)
DEFAULT_COUNTRY=Kyrgyzstan
DEFAULT_TIMEZONE=Asia/Bishkek
DEFAULT_CURRENCY=KGS

# Search Configuration
SEARCH_RESULTS_LIMIT=50
AUTOCOMPLETE_LIMIT=10

